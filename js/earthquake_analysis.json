{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/6_advanced_examples/data/earthquake.csv"
  },
  "params": [
    {
      "name": "brush",
      "select": {
        "type": "interval",
        "encodings": ["x"]
      }
    }
  ],
  "vconcat": [
    {
      "width": 600,
      "height": 300,
      "transform": [
        {"bin": {"step": 0.5, "extent": [5, 7]}, "field": "mag", "as": "Magnitude"}
      ],
      "mark": "area",
      "encoding": {
        "x": {
          "field": "time",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "tickCount": 5, "grid": false}
        },
        "y": {"aggregate": "count", "title": "Count of Earthquakes"},
        "color": {
          "field": "Magnitude",
          "scale": {
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
          },
          "legend": {"values": [5, 5.5, 6, 6.5]}
        }
      }
    },
    {
      "width": 600,
      "height": 120,
      "mark": {
        "type": "line",
        "stroke": "#1f77b4",
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "time",
          "timeUnit": "yearmonth",
          "axis": {"title": "Time", "tickCount": 5, "grid": false}
        },
        "y": {
          "aggregate": "mean",
          "field": "mag",
          "title": "Average Magnitude",
          "scale": {"domain": [5, 7]}
        }
      }
    }
  ]
}
