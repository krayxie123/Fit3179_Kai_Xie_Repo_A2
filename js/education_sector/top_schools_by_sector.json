{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top Schools by Education Sector: Percentage of Students with 40+ Study Scores (2014-2024)",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv",
    "format": {
      "parse": {
        "year": "number"
      }
    }
  },
  "transform": [
    {
      "filter": "datum.percent_ss_40plus != null && datum.percent_ss_40plus != '' && datum.percent_ss_40plus != '-'"
    },
    {
      "calculate": "parseFloat(datum.percent_ss_40plus)",
      "as": "percent_40plus"
    },
    {
      "filter": "!isNaN(datum.percent_40plus) && datum.percent_40plus >= 0"
    },
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector"]
      }
    },
    {
      "filter": "datum.Education_Sector != null"
    },
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "groupby": ["year", "Education_Sector"],
      "sort": [{"field": "percent_40plus", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 5"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "percent_40plus", "as": "avg_percent_40plus"},
        {"op": "count", "as": "school_count"}
      ],
      "groupby": ["year", "Education_Sector"]
    }
  ],
  "mark": {
    "type": "area",
    "point": true,
    "strokeWidth": 2,
    "opacity": 0.5
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": 45, "format": "d"}
    },
    "y": {
      "field": "avg_percent_40plus",
      "type": "quantitative",
      "title": "Average % Students with 40+ Study Scores",
      "scale": {"domain": [0, 100]}
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#ed7b84", "#7eb77f", "#84c0c6"]
      },
      "legend": null
    },
    "tooltip": [
      {"field": "year", "type": "temporal", "title": "Year"},
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "avg_percent_40plus", "type": "quantitative", "title": "Average % 40+ Scores", "format": ".1f"},
      {"field": "school_count", "type": "quantitative", "title": "Number of Top Schools"}
    ]
  }
}
