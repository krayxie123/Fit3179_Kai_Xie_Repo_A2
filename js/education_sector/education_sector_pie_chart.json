{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/data/dv402-SchoolLocations2025.csv"
  },
  "transform": [
    {
      "filter": "datum.Education_Sector != null && datum.Education_Sector != ''"
    },
    {
      "aggregate": [
        {
          "op": "count",
          "as": "count"
        }
      ],
      "groupby": ["Education_Sector"]
    },
    {
      "window": [
        {
          "op": "sum",
          "field": "count",
          "as": "total"
        }
      ]
    },
    {
      "calculate": "datum.count / datum.total * 100",
      "as": "percentage"
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 50,
    "stroke": "white",
    "strokeWidth": 2
  },
  "background": "transparent",
  "encoding": {
    "theta": {
      "field": "count",
      "type": "quantitative"
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#000000", "#FF8C00", "#FFD700"]
      },
      "legend": {
        "orient": "top",
        "direction": "horizontal",
        "title": null
      }
    },
    "tooltip": [
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "count", "type": "quantitative", "title": "Number of Schools"}
    ]
  },
  "config": {
    "title": {
      "fontSize": 16,
      "fontWeight": "bold"
    }
  }
}
