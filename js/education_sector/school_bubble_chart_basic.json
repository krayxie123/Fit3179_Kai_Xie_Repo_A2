{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Schools: VCE Study Scores vs Tertiary Applications (Basic)",
  "width": 1000,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv",
    "format": {
      "type": "csv",
      "parse": {
        "year": "number",
        "median_vce_ss": "number",
        "percent_vce_studs_apply_tert": "number",
        "num_vce_students_enrolled": "number"
      }
    }
  },
  "params": [
    {
      "name": "year_filter",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.year == year_filter"
    },
    {
      "filter": "datum.median_vce_ss != '-' && datum.median_vce_ss != '' && datum.median_vce_ss != null"
    },
    {
      "filter": "datum.percent_vce_studs_apply_tert != '-' && datum.percent_vce_studs_apply_tert != '' && datum.percent_vce_studs_apply_tert != null"
    },
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector"]
      }
    },
    {
      "filter": "datum.Education_Sector != null"
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.7,
    "stroke": "white",
    "strokeWidth": 1
  },
  "background": "transparent",
  "encoding": {
    "x": {
      "field": "median_vce_ss",
      "type": "quantitative",
      "title": "Median VCE Study Score"
    },
    "y": {
      "field": "percent_vce_studs_apply_tert",
      "type": "quantitative",
      "title": "Tertiary Applications (%)"
    },
    "size": {
      "field": "num_vce_students_enrolled",
      "type": "quantitative",
      "title": "VCE Students"
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#000000", "#FF8C00", "#FFD700"]
      },
      "legend": {
        "orient": "top",
        "direction": "horizontal",
        "labelFontSize": 20,
        "titleFontSize": 16
      }
    },
    "tooltip": [
      {"field": "school", "type": "nominal", "title": "School"},
      {"field": "locality", "type": "nominal", "title": "Locality"},
      {"field": "year", "type": "temporal", "title": "Year"},
      {"field": "median_vce_ss", "type": "quantitative", "title": "Median VCE Score"},
      {"field": "percent_vce_studs_apply_tert", "type": "quantitative", "title": "Tertiary Applications %"},
      {"field": "num_vce_students_enrolled", "type": "quantitative", "title": "VCE Students Enrolled"}
    ]
  }
}
