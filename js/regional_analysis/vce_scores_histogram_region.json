{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Distribution of VCE Median Scores by Region (Histograms)",
  "width": 220,
  "height": 120,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "filter": "datum.median_vce_ss != null && datum.median_vce_ss != 'I/D' && datum.median_vce_ss != '' && datum.median_vce_ss != '-'"
    },
    {
      "calculate": "parseFloat(datum.median_vce_ss)",
      "as": "study_score"
    },
    {
      "lookup": "school",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"
        },
        "key": "School_Name",
        "fields": ["Region"]
      }
    },
    {
      "filter": "datum.Region != null"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "study_score",
      "title": "VCE Median Study Score",
      "type": "quantitative",
      "bin": {"maxbins": 20},
      "scale": {"domain": [15, 40]}
    },
    "y": {
      "aggregate": "count",
      "title": "Number of Schools",
      "type": "quantitative"
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "legend": {
        "orient": "bottom",
        "direction": "horizontal"
      }
    },
    "facet": {
      "field": "Region",
      "type": "nominal",
      "columns": 4,
      "header": null
    },
    "tooltip": [
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "study_score", "type": "quantitative", "title": "VCE Score Range"},
      {"aggregate": "count", "type": "quantitative", "title": "Number of Schools"}
    ]
  },
  "resolve": {
    "scale": {
      "x": "independent",
      "y": "independent"
    }
  }
}