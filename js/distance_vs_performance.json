{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Median VCE Score vs Distance from Melbourne CBD",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "filter": "datum.median_vce_ss != null && datum.median_vce_ss != '' && datum.median_vce_ss != '-' && datum.median_vce_ss != 'I/D'"
    },
    {
      "calculate": "parseFloat(datum.median_vce_ss)",
      "as": "median_score"
    },
    {
      "filter": "datum.median_score > 0 && !isNaN(datum.median_score)"
    },
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector", "Latitude", "Longitude"]
      }
    },
    {
      "filter": "datum.Latitude != null && datum.Longitude != null && datum.Education_Sector != null"
    },
    {
      "calculate": "sqrt(pow(datum.Longitude - 144.9631, 2) + pow(datum.Latitude - (-37.8136), 2)) * 111.32",
      "as": "distance_km"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "median_score", "as": "avg_median_score"},
        {"op": "mean", "field": "distance_km", "as": "avg_distance"},
        {"op": "count", "field": "school", "as": "data_points"}
      ],
      "groupby": ["school", "Education_Sector"]
    }
  ],
  "mark": {
    "type": "circle",
    "size": 100,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "avg_distance",
      "type": "quantitative",
      "title": "Distance from Melbourne CBD (km)",
      "scale": {"zero": false}
    },
    "y": {
      "field": "avg_median_score",
      "type": "quantitative",
      "title": "Average Median VCE Score",
      "scale": {"zero": false}
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#1f77b4", "#ffd700", "#2ca02c"]
      }
    },
    "size": {
      "field": "data_points",
      "type": "quantitative",
      "title": "Years of Data",
      "scale": {"range": [50, 300]}
    },
    "tooltip": [
      {"field": "school", "type": "nominal", "title": "School"},
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "avg_distance", "type": "quantitative", "title": "Distance from CBD (km)", "format": ".1f"},
      {"field": "avg_median_score", "type": "quantitative", "title": "Average Median Score", "format": ".1f"},
      {"field": "data_points", "type": "quantitative", "title": "Years of Data"}
    ]
  }
}
