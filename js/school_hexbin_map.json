{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "School Density Map (Hexagonal Binning)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/data/dv402-SchoolLocations2025.csv"
  },
  "transform": [
    {
      "filter": "datum.X != null && datum.Y != null && datum.X != '' && datum.Y != ''"
    },
    {
      "calculate": "parseFloat(datum.X)",
      "as": "longitude"
    },
    {
      "calculate": "parseFloat(datum.Y)",
      "as": "latitude"
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.6,
    "stroke": "white",
    "strokeWidth": 1
  },
  "encoding": {
    "x": {
      "field": "longitude",
      "type": "quantitative",
      "title": "Longitude",
      "scale": {"domain": [140.5, 150.5]}
    },
    "y": {
      "field": "latitude", 
      "type": "quantitative",
      "title": "Latitude",
      "scale": {"domain": [-39.5, -33.5]}
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#1f77b4", "#ffd700", "#2ca02c"]
      }
    },
    "size": {
      "value": 50
    },
    "tooltip": [
      {"field": "School_Name", "type": "nominal", "title": "School"},
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "Address_Town", "type": "nominal", "title": "Town"}
    ]
  },
  "config": {
    "title": {
      "fontSize": 16,
      "fontWeight": "bold"
    }
  }
}
