{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Parallel Coordinates: VCE Performance Metrics by School (2014-2024)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "filter": "datum.median_vce_ss != null && datum.median_vce_ss != '' && datum.median_vce_ss != '-' && datum.median_vce_ss != 'I/D'"
    },
    {
      "filter": "datum.percent_ss_40plus != null && datum.percent_ss_40plus != '' && datum.percent_ss_40plus != '-'"
    },
    {
      "filter": "datum.percent_vce_studs_apply_tert != null && datum.percent_vce_studs_apply_tert != '' && datum.percent_vce_studs_apply_tert != '-'"
    },
    {
      "calculate": "parseFloat(datum.median_vce_ss)",
      "as": "median_score"
    },
    {
      "calculate": "parseFloat(datum.percent_ss_40plus)",
      "as": "percent_40plus"
    },
    {
      "calculate": "parseFloat(datum.percent_vce_studs_apply_tert)",
      "as": "percent_tertiary"
    },
    {
      "filter": "datum.median_score > 0 && !isNaN(datum.median_score) && datum.percent_40plus >= 0 && !isNaN(datum.percent_40plus) && datum.percent_tertiary >= 0 && !isNaN(datum.percent_tertiary)"
    },
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector"]
      }
    },
    {
      "filter": "datum.Education_Sector != null && datum.Education_Sector != ''"
    },
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "sort": [{"field": "median_score", "order": "descending"}]
    },
    {
      "filter": "datum.rank <= 50"
    },
    {
      "window": [{"op": "count", "as": "index"}]
    },
    {
      "fold": ["median_score", "percent_40plus", "percent_tertiary"]
    },
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    },
    {
      "calculate": "(datum.min + datum.max) / 2",
      "as": "mid"
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "mark": "line",
      "encoding": {
        "color": {
          "type": "nominal", 
          "field": "Education_Sector",
          "scale": {
            "domain": ["Government", "Catholic", "Independent"],
            "range": ["#1f77b4", "#ffd700", "#2ca02c"]
          }
        },
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {"value": 0.7},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {"type": "nominal", "field": "school", "title": "School"},
          {"type": "nominal", "field": "Education_Sector", "title": "Education Sector"},
          {"type": "quantitative", "field": "median_score", "title": "Median VCE Score", "format": ".1f"},
          {"type": "quantitative", "field": "percent_40plus", "title": "% Students 40+ Score", "format": ".1f"},
          {"type": "quantitative", "field": "percent_tertiary", "title": "% Apply to Tertiary", "format": ".1f"}
        ]
      }
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 200}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 400}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min"}
          }
        },
        {
          "mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}
        }
      ]
    }
  ],
  "config": {
    "axisX": {"domain": false, "labelAngle": 0, "tickColor": "#ccc", "title": null},
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5},
      "tick": {"orient": "horizontal"}
    }
  }
}
