{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "VCE Performance vs Distance from Melbourne CBD (Real Data)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/processed_distance_data.csv"
  },
  "mark": {
    "type": "circle",
    "size": 100,
    "opacity": 0.7
  },
  "encoding": {
    "x": {
      "field": "avg_distance_km",
      "type": "quantitative",
      "title": "Distance from Melbourne CBD (km)",
      "scale": {"zero": false}
    },
    "y": {
      "field": "avg_median_score",
      "type": "quantitative",
      "title": "Average Median VCE Score",
      "scale": {"zero": false}
    },
    "color": {
      "field": "education_sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#1f77b4", "#ffd700", "#2ca02c"]
      }
    },
    "size": {
      "field": "years_of_data",
      "type": "quantitative",
      "title": "Years of Data",
      "scale": {"range": [50, 300]}
    },
    "tooltip": [
      {"field": "school", "type": "nominal", "title": "School"},
      {"field": "education_sector", "type": "nominal", "title": "Education Sector"},
      {"field": "avg_distance_km", "type": "quantitative", "title": "Distance from CBD (km)", "format": ".1f"},
      {"field": "avg_median_score", "type": "quantitative", "title": "Average Median Score", "format": ".1f"},
      {"field": "years_of_data", "type": "quantitative", "title": "Years of Data"},
      {"field": "performance_rank", "type": "quantitative", "title": "Performance Rank"}
    ]
  }
}
