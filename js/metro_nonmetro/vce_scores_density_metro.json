{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 450,
  "height": 520,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "filter": "datum.median_vce_ss != null && datum.median_vce_ss != 'I/D' && datum.median_vce_ss != '' && datum.median_vce_ss != '-'"
    },
    {
      "calculate": "parseFloat(datum.median_vce_ss)",
      "as": "study_score"
    },
    {
      "lookup": "school",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"
        },
        "key": "School_Name",
        "fields": ["LGA_TYPE"]
      }
    },
    {
      "filter": "datum.LGA_TYPE != null"
    },
    {
      "density": "study_score",
      "bandwidth": 0.5,
      "groupby": ["LGA_TYPE"]
    }
  ],
  "mark": "area",
  "background": "transparent",
  "encoding": {
    "x": {
      "field": "value",
      "title": "VCE Median Study Score",
      "type": "quantitative"
    },
    "y": {
      "field": "density",
      "title": "Density",
      "type": "quantitative"
    },
    "color": {
      "field": "LGA_TYPE",
      "type": "nominal",
      "title": "Area Type",
      "scale": {
        "domain": ["Metro", "Non Metro"],
        "range": ["#F7AF9D", "#8FCB9B"]
      },
      "legend": {
        "orient": "top",
        "direction": "horizontal",
        "title": null
      }
    },
    "opacity": {
      "value": 0.7
    }
  }
}
