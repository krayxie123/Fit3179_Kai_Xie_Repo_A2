{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average VCE Study Scores by Suburb (2024) - Choropleth Map",
  "width": 1600,
  "height":1000,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/js/vicsuburbsgood.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f5f5f5",
        "stroke": "#ccc",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/js/vicsuburbsgood.topojson",
        "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
      },
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/main/data/suburb_study_scores_updated.csv"},
            "key": "suburb",
            "fields": ["avg_study_score", "school_count"]
          }
        },
        {
          "calculate": "datum.avg_study_score != null ? datum.avg_study_score : 10",
          "as": "study_score_with_offset"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "study_score_with_offset",
          "type": "quantitative",
          "title": "Average Study Score",
          "scale": {
            "domain": [0.1, 37],
            "range": ["#fee5d9", "#a50f15"],
            "scheme": "reds"
          },
          "legend": {
            "title": "Average Study Score",
            "orient": "bottom"
          }
        },
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Suburb"},
          {"field": "avg_study_score", "type": "quantitative", "title": "Avg Study Score", "format": ".1f"},
          {"field": "school_count", "type": "quantitative", "title": "Schools"}
        ]
      }
    }
  ]
}