{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Median Study Scores by School Type and Year (2014-2024)",
  "width": 400,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector"]
      }
    },
    {
      "filter": "datum.Education_Sector != null && datum.Education_Sector != ''"
    },
    {
      "filter": "datum.median_vce_ss != null && datum.median_vce_ss != '' && datum.median_vce_ss != '-' && datum.median_vce_ss != 'I/D'"
    },
    {
      "calculate": "parseFloat(datum.median_vce_ss)",
      "as": "study_score"
    },
    {
      "filter": "datum.study_score > 0 && !isNaN(datum.study_score)"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "study_score", "as": "avg_study_score"}
      ],
      "groupby": ["year", "Education_Sector"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "avg_study_score",
      "type": "quantitative",
      "title": "Average Median Study Score"
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#1f77b4", "#ffd700", "#2ca02c"]
      }
    },
    "column": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "header": {"labelAngle": 0}
    },
    "tooltip": [
      {"field": "year", "type": "temporal", "title": "Year"},
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "avg_study_score", "type": "quantitative", "title": "Average Study Score", "format": ".1f"}
    ]
  }
}
