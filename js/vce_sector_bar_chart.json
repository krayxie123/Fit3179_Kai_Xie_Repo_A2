{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Average Median VCE Score by Education Sector",
  "width": 400,
  "height": 400,
  "data": {
    "url": "data/dv402-SchoolLocations2025.csv"
  },
  "transform": [
    {
      "lookup": "School_Name",
      "from": {
        "data": {"url": "data/VCE 2024 Results.csv"},
        "key": "School",
        "fields": ["Median VCE study score"]
      }
    },
    {
      "filter": "datum['Median VCE study score'] != null && datum['Median VCE study score'] != 'I/D' && datum['Median VCE study score'] != '-' && datum['Median VCE study score'] != ''"
    },
    {
      "calculate": "parseFloat(datum['Median VCE study score'])",
      "as": "median_score"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "median_score",
          "as": "avg_median_score"
        }
      ],
      "groupby": ["Education_Sector"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector"
    },
    "y": {
      "field": "avg_median_score",
      "type": "quantitative",
      "title": "Average Median VCE Score"
    },
    "color": {
      "field": "Education_Sector",
      "type": "nominal",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": ["#1f77b4", "#ffd700", "#2ca02c"]
      }
    },
    "tooltip": [
      {"field": "Education_Sector", "type": "nominal", "title": "Sector"},
      {"field": "avg_median_score", "type": "quantitative", "title": "Average Median VCE Score", "format": ".2f"}
    ]
  }
}