{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Average VCE Study Scores by Suburb (2024)",
  "width": 800,
  "height": 600,
  "projection": {"type": "mercator"},
  "data": {
    "url": "georef-australia-local-government-area@public.geojson",
    "format": {"type": "geojson"}
  },
  "transform": [
    {
      "filter": "datum.properties.ste_name && datum.properties.ste_name[0] === 'Victoria'"
    },
    {
      "calculate": "datum.properties.lga_name[0]",
      "as": "lga_name_str"
    },
    {
      "lookup": "lga_name_str",
      "from": {
        "data": {"url": "js/working_choropleth.csv"},
        "key": "lga_name",
        "fields": ["avg_study_score", "school_count"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.5
  },
  "encoding": {
    "color": {
      "field": "avg_study_score",
      "type": "quantitative",
      "title": "Average Study Score",
      "scale": {
        "domain": [20, 37],
        "range": ["#fee5d9", "#a50f15"]
      },
      "legend": {
        "title": "Average Study Score",
        "orient": "bottom"
      }
    },
    "tooltip": [
      {"field": "lga_name_str", "type": "nominal", "title": "Suburb"},
      {"field": "avg_study_score", "type": "quantitative", "title": "Avg Study Score", "format": ".1f"},
      {"field": "school_count", "type": "quantitative", "title": "Schools"}
    ]
  }
}

