{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "VCE Student Pathways: School Sectors to Destinations",
  "width": 1000,
  "height": 600,
  "padding": 5,
  "data": [
    {
      "name": "table",
      "values": [
        {"source": "Government", "target": "VCE Students", "value": 50000},
        {"source": "Government", "target": "VET Students", "value": 15000},
        {"source": "Government", "target": "IB Students", "value": 2000},
        {"source": "Government", "target": "NHT Students", "value": 1000},
        {"source": "Government", "target": "VPC Students", "value": 5000},
        {"source": "Catholic", "target": "VCE Students", "value": 30000},
        {"source": "Catholic", "target": "VET Students", "value": 8000},
        {"source": "Catholic", "target": "IB Students", "value": 5000},
        {"source": "Catholic", "target": "NHT Students", "value": 2000},
        {"source": "Catholic", "target": "VPC Students", "value": 3000},
        {"source": "Independent", "target": "VCE Students", "value": 25000},
        {"source": "Independent", "target": "VET Students", "value": 5000},
        {"source": "Independent", "target": "IB Students", "value": 8000},
        {"source": "Independent", "target": "NHT Students", "value": 3000},
        {"source": "Independent", "target": "VPC Students", "value": 2000}
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": ["Government", "Catholic", "Independent", "VCE Students", "VET Students", "IB Students", "NHT Students", "VPC Students"]
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": [0, 50000]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": ["Government", "Catholic", "Independent"],
      "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "source"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "value"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"scale": "color", "field": "source"},
          "fillOpacity": {"value": 0.8}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "target"},
          "width": {"scale": "x", "band": 1},
          "y": {"scale": "y", "field": "value"},
          "y2": {"scale": "y", "value": 0},
          "fill": {"value": "#d62728"},
          "fillOpacity": {"value": 0.8}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "source", "offset": -10},
          "y": {"scale": "y", "field": "value", "mult": 0.5},
          "text": {"field": "value", "format": ",.0f"},
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "fontWeight": {"value": "bold"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "target", "offset": 10},
          "y": {"scale": "y", "field": "value", "mult": 0.5},
          "text": {"field": "value", "format": ",.0f"},
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ]
}

