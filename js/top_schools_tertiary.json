{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Schools by Percentage of Students with 40+ Study Scores for Each Year (2014-2024)",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv"
  },
  "transform": [
    {
      "filter": "datum.percent_ss_40plus != null && datum.percent_ss_40plus != '' && datum.percent_ss_40plus != '-'"
    },
    {
      "calculate": "parseFloat(datum.percent_ss_40plus)",
      "as": "percent_40plus"
    },
    {
      "filter": "datum.percent_40plus > 0 && !isNaN(datum.percent_40plus)"
    },
    {
      "window": [
        {"op": "rank", "as": "rank"}
      ],
      "sort": [{"field": "percent_40plus", "order": "descending"}],
      "groupby": ["year"]
    },
    {
      "filter": "datum.rank <= 10"
    },
    {
      "lookup": "school",
      "from": {
        "data": {"url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/dv402-SchoolLocations2025.csv"},
        "key": "School_Name",
        "fields": ["Education_Sector"]
      }
    }
  ],
  "mark": {
    "type": "line",
    "point": true,
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "percent_40plus",
      "type": "quantitative",
      "title": "Percentage of Students with 40+ Study Scores (%)",
      "scale": {"zero": false}
    },
    "color": {
      "field": "school",
      "type": "nominal",
      "title": "School",
      "scale": {"scheme": "category20"}
    },
    "strokeDash": {
      "field": "Education_Sector",
      "type": "nominal",
      "title": "Education Sector",
      "scale": {
        "domain": ["Government", "Catholic", "Independent"],
        "range": [[1, 0], [5, 5], [10, 5]]
      }
    },
    "tooltip": [
      {"field": "school", "type": "nominal", "title": "School"},
      {"field": "Education_Sector", "type": "nominal", "title": "Education Sector"},
      {"field": "year", "type": "temporal", "title": "Year"},
      {"field": "percent_40plus", "type": "quantitative", "title": "Percentage with 40+ Study Scores (%)", "format": ".1f"},
      {"field": "locality", "type": "nominal", "title": "Locality"}
    ]
  }
}
