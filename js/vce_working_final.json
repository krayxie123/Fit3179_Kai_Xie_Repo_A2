{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Median VCE Study Scores by Locality",
    "fontSize": 50,
    "fontWeight": "bold"
  },
  "width": 700,
  "height": 500,
  "params": [
    {
      "name": "year_filter",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "zoom_level",
      "value": 20000,
      "bind": {
        "input": "range",
        "min": 20000,
        "max": 50000,
        "step": 100,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [145, -37.7],
      "bind": {
        "input": "select",
        "options": [
          [145, -37],
          [144.3, -38.1],
          [144.9, -36.7],
          [147.1, -38.1]
        ],
        "labels": ["Melbourne CBD", "Geelong", "Bendigo", "Sale"],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "data": {
    "url": "js/vicsuburbsgood.topojson",
    "format": {"type": "topojson", "feature": "Vicsubs.topojson"}
  },
  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.vic_loca_2",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/krayxie123/Week4-studio/refs/heads/main/data/VCE_School_Results.csv",
              "format": {"type": "csv", "parse": {"year": "number", "median_vce_ss": "string"}}
            },
            "key": "locality",
            "fields": ["median_vce_ss", "school", "year"]
          }
        },
        {
          "filter": "datum.year == year_filter"
        },
        {
          "calculate": "datum.median_vce_ss != null && datum.median_vce_ss != '-' && datum.median_vce_ss != '' && datum.median_vce_ss != 'I/D' ? parseFloat(datum.median_vce_ss) : 0",
          "as": "study_score"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "study_score",
          "type": "quantitative",
          "scale": {
            "domain": [0, 10, 20, 30, 40, 50],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "legend": {
            "title": "Median VCE Study Score",
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {"field": "properties.vic_loca_2", "type": "nominal", "title": "Locality"},
          {"field": "study_score", "type": "quantitative", "title": "Median Study Score", "format": ".1f"},
          {"field": "school", "type": "nominal", "title": "School"},
          {"field": "year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 0.5, "fill": null}
    }
  ]
}
